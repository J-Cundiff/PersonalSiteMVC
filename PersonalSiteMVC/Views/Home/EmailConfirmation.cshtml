@{
    ViewData["Title"] = "Email Confirmation";
}

@model PersonalSiteMVC.Models.ContactViewModel;

<!-- contact header section -->
<div id="contact-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12"></div>
        </div>
    </div>
</div>

<div id="contact">
    <div class="container about-des text-center">
        <div class="row">
            <div class="col-md-12 col-sm-12 mt30">
                <div class="info-box">
                    <i class="bx bx-check-circle"></i>
                    <h3>Message Sent!</h3>
                    <p>
                        Thank you for contacting me! I will respond to your message
                        using the provided email address, @Model.Email , in the next 1-3 business days.
                    </p>

                    <br />

                    <div class="offset-3 col-md-6 text-center">
                        <p>
                            You sent the following message on
                            @DateTime.Now.Date.ToShortDateString() at
                            @DateTime.Now.ToShortTimeString() :
                        </p>
                    </div>

                    <br />

                    <div class="offset-2 col-md-6">
                        <p>
                            <em>@Model.Message</em>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="contact">
    <div class="container">
        <div class="row">
            <!-- Location Map Below -->
            <div class="col-md-12 col-sm-12">
                <h3>Location</h3>
                <div class="google_map mt20">
                    <div id="map-canvas"></div>
                </div>
            </div>
        </div>
    </div>
</div>
